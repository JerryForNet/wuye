            printXML += '   <dyfs>打印方式</dyfs>';
            printXML += '   <dyjmc>打印机名称</dyjmc>';
            printXML += '</input>';
            printXML += '</body>';
            printXML += '</business >';

            var mo = document.getElementById("myZjjkOCX");
            var retXml = mo.OperateDiskX(printXML);

            var xmldoc = loadXML(retXml);

            var elements = xmldoc.getElementsByTagName("output");
            var retdata = "";
            for (var i = 0; i < elements.length; i++) {
                var name = elements[i].getElementsByTagName("returncode")[0].firstChild.nodeValue;
