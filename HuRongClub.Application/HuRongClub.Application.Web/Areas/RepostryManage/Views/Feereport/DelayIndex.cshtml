@{
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>

    var obj = new Array();
    var queryJson = new Array();
    var comboj = new Array();
    $(function () {
        InitialPage();
        //GetcolModel();
        //GetGrid();
        InitalPageSelect();
        //查询事件
        $("#btn_Search").click(function () {
            if ($('#FeeName').val() == null || $('#FeeName').val() == "")
            {
                alert("请选择费用项目");
                return false;
            }
            queryJson = {
                YearNum: $('#YearNum').find('.dropdown-text').attr('data-value'),
                MonthNum: $('#MonthNum').find('.dropdown-text').attr('data-value'),
                FeeName: $('#FeeName').val(),
                propertyID: $('#PropertyName').val()
            }
            GetcolModel();
            GetGrid();
            $('#gridTable').jqGrid('setGridParam', {
                datatype: 'json',
                postData: { queryJson: JSON.stringify(queryJson) },
                page: 1
            }).trigger('reloadGrid');
        });
    });
    function InitalPageSelect() {

        //加载年月
        var mydate = new Date();
        var $year = mydate.getFullYear();
        var $mouth = mydate.getMonth() + 1;
        $.SetForm({
            url: "/TenementManage/Feeincome/GetYear",
            success: function (data) {
                $.each(data, function (id, item) {
                    var row = '<li><a data-value="' + item.id + '">' + item.text + '</a></li>';
                    $('#YearNum').find('ul').append(row);
                });
                $('#YearNum').find('li>a').click(function () {
                    var id = $(this).attr('data-value');
                    var text = $(this).html();
                    $('#YearNum').find('.dropdown-text').html(text).attr('data-value', id);
                });
            }
        });
        $('#YearNum').find('.dropdown-text').html($year).attr('data-value', $year);
        $.SetForm({
            url: "/TenementManage/Feeincome/GetMouth",
            success: function (data) {
                $.each(data, function (id, item) {
                    var row = '<li><a data-value="' + item.id + '">' + item.text + '</a></li>';
                    $('#MonthNum').find('ul').append(row);
                });
                $('#MonthNum').find('li>a').click(function () {
                    var id = $(this).attr('data-value');
                    var text = $(this).html();
                    $('#MonthNum').find('.dropdown-text').html(text).attr('data-value', id);
                });
            }
        });
        $('#MonthNum').find('.dropdown-text').html($mouth).attr('data-value', $mouth);
        //加载费用项目
        $("#FeeName").selectpicker({ noneSelectedText: '请选择费用项目' });
        $.SetForm({
            url: "/FinanceManage/Feeitem/GetSelectJson?type=1&group_id=" + encodeURI("应收费用"),
            success: function (data) {

                var str = "";
                $.each(data, function (id, item) {
                    str += "<option value=" + item.id + ">" + item.text + "</option>";
                });
                $("#FeeName").append(str);
                $("#FeeName").selectpicker('refresh');
            }
        });
        $("#PropertyName").selectpicker({ noneSelectedText: '请选择小区' });
        $.SetForm({
            url: "/Home/GetPropertyJson",
            success: function (data) {
                data[0].prevUntil
                var str = "";

                for (var i = 0; i < data.length; i++) {
                    str += "<option value=" + data[i].property_id + ">" + data[i].property_name + "</option>";
                }

                $("#PropertyName").append(str);
                $("#PropertyName").selectpicker('refresh');
            }
        });


    }
    //初始化页面
    function InitialPage() {
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 164.5);
            }, ($('.gridPanel').width() - 45) / 15);
            e.stopPropagation();
        });
    }
    //加载表格
    function GetGrid() {
        var queryJsonstr = "{'YearNum': '" + $('#YearNum').find('.dropdown-text').attr('data-value') + "','MonthNum': '" + $('#MonthNum').find('.dropdown-text').attr('data-value') + "','FeeName': '" + $('#FeeName').val() + "','propertyID': '" + $('#PropertyName').val() + "'}";
        $('#gridTable').GridUnload();
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 164.5,
            url: "../../RepostryManage/Feereport/GetDelayIndexListJson",
            postData: { queryJson: queryJsonstr },
            datatype: "json",
            colModel: obj,
            pager: false,
            rowNum: 'all',
            shrinkToFit: false,
            gridview: true,
            footerrow: true,
            gridComplete: function () {
                var FeeNameid = $('#FeeName').val();
                var FeeNamename = $("button[data-id='FeeName']").attr("title");
                var FeeNamenamelist = FeeNamename.split(',');
                if (FeeNamenamelist.length > 0) {
                    var lists = { "property_name": "合计" }
                    for (var i = 0; i < FeeNamenamelist.length; i++) {
                        var columnname_linian = "linian_" + FeeNameid[i];
                        var columnvalue_linian = $(this).getCol(columnname_linian, false, "sum");
                        eval("lists." + columnname_linian + "=" + columnvalue_linian);

                        var columnname_shangnian = "shangnian_" + FeeNameid[i];
                        var columnvalue_shangnian = $(this).getCol(columnname_shangnian, false, "sum");
                        eval("lists." + columnname_shangnian + "=" + columnvalue_shangnian);

                        var columnname_dangnian = "dangnian_" + FeeNameid[i];
                        var columnvalue_dangnian = $(this).getCol(columnname_dangnian, false, "sum");
                        eval("lists." + columnname_dangnian + "=" + columnvalue_dangnian);

                        var columnname_heji = "heji_" + FeeNameid[i];
                        var columnvalue_heji = $(this).getCol(columnname_heji, false, "sum");
                        eval("lists." + columnname_heji + "=" + columnvalue_heji);
                    }
                    eval("lists.zonghe=" + $(this).getCol("zonghe", false, "sum"));
                    //合计
                    $(this).footerData("set", lists);
                    $('table.ui-jqgrid-ftable td').prevUntil().css("border-right-color", "#fff");
                }
            }
        });
        $gridTable.jqGrid('setGroupHeaders', {
            useColSpanStyle: false,
            groupHeaders: comboj
        });

    }
    function GetcolModel() {
        var FeeNameid = $('#FeeName').val();
        var FeeNamename = $("button[data-id='FeeName']").attr("title");
        var FeeNamenamelist = FeeNamename.split(',');
        if (FeeNamenamelist.length > 0) {
            var leng = FeeNamenamelist.length * 4 + 2;
            obj = new Array();
            var property_namejson = { label: "小区", name: 'property_name', width: ($('.gridPanel').width() - 45) / leng, align: 'left', sortable: false, resizable: false };
            obj.push(property_namejson);
            for (var i = 0; i < FeeNamenamelist.length; i++) {
                var yinshou_json = { label: '历年', name: 'linian_' + FeeNameid[i], width: ($('.gridPanel').width() - 45) / leng, align: 'left', sortable: false, resizable: false, formatter: "number", formatoptions: { thousandsSeparator: "", decimalPlaces: 2 } };
                var shoushi_json = { label: '上年', name: 'shangnian_' + FeeNameid[i], width: ($('.gridPanel').width() - 45) / leng, align: 'left', sortable: false, resizable: false, formatter: "number", formatoptions: { thousandsSeparator: "", decimalPlaces: 2 } };
                var zhuijiao_json = { label: '当年', name: 'dangnian_' + FeeNameid[i], width: ($('.gridPanel').width() - 45) / leng, align: 'left', sortable: false, resizable: false, formatter: "number", formatoptions: { thousandsSeparator: "", decimalPlaces: 2 } };
                var yue_json = { label: '小计', name: 'heji_' + FeeNameid[i], width: ($('.gridPanel').width() - 45) / leng, align: 'left', sortable: false, resizable: false, formatter: "number", formatoptions: { thousandsSeparator: "", decimalPlaces: 2 } };
                obj.push(yinshou_json);
                obj.push(shoushi_json);
                obj.push(zhuijiao_json);
                obj.push(yue_json);
                var comobjson = { startColumnName: 'linian_' + FeeNameid[i], numberOfColumns: 4, titleText: '<em>' + FeeNamenamelist[i] + '</em>' };
                comboj.push(comobjson);
            }
            var zonghejson = { label: "合计", name: 'zonghe', width: ($('.gridPanel').width() - 45) / leng, align: 'left', sortable: false, resizable: false, formatter: "number", formatoptions: { thousandsSeparator: "", decimalPlaces: 2 } };
            obj.push(zonghejson);
        }

    }
</script>
<div class="titlePanel">
    <div class="title-search">
        <table>
            <tr>
                <td>
                    <div id="YearNum" class="btn-group">
                        <a class="btn btn-default dropdown-text" data-toggle="dropdown">请选择年度</a>
                        <a class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                        <ul class="dropdown-menu"></ul>
                    </div>
                </td>
                <td>
                    <div id="MonthNum" class="btn-group" style="margin-left: 5px;">
                        <a class="btn btn-default dropdown-text" data-toggle="dropdown">请选择月份</a>
                        <a class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                        <ul class="dropdown-menu"></ul>
                    </div>
                </td>
                <td>
                    <label for="PropertyName" class="PropertyName"></label>
                    <select id="PropertyName" class="selectpicker bla bla bli" multiple data-live-search="true"></select>
                </td>
                <td>
                    <label for="FeeName" class="FeeName"></label>
                    <select id="FeeName" class="selectpicker bla bla bli" multiple data-live-search="true"></select>
                </td>
                <td style="padding-left: 5px;">
                    <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>查询</a>
                </td>
            </tr>
        </table>
    </div>

</div>
<div class="gridPanel">
    <table id="gridTable"></table>
</div>

