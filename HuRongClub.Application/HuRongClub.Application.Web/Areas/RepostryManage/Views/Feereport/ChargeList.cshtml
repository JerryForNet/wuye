            url: "/TenementManage/Feeincome/GetYear",
            success: function (data) {
                $.each(data, function (id, item) {
                    var row = '<li><a data-value="' + item.id + '">' + item.text + '</a></li>';
                    $('#YearNum').find('ul').append(row);
                });
