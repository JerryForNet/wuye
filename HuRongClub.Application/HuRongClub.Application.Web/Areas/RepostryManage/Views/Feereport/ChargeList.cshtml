                    var id = $(this).attr('data-value');
                    var text = $(this).html();
                    $('#YearNum').find('.dropdown-text').html(text).attr('data-value', id);
                });
            }
        });
        $('#YearNum').find('.dropdown-text').html($year).attr('data-value', $year);
